<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="hongji.bola.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="hongji.bola.Perspective"
            name="RCP Perspective"
            id="hongji.bola.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="hongji.bola.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="hongji.bola.commands.category"
            id="hongji.bola.commands.sampleCommand"
            name="Sample Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="hongji.bola.handlers.SampleHandler"
            commandId="hongji.bola.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="hongji.bola.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="hongji.bola.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="hongji.bola.commands.sampleCommand"
                  id="hongji.bola.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="hongji.bola.toolbars.sampleToolbar">
            <command
                  commandId="hongji.bola.commands.sampleCommand"
                  icon="icons/sample.png"
                  id="hongji.bola.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="hongji.bola.views.ContactsView"
            icon="icons/contacts.png"
            id="hongji.bola.views.ContactsView"
            name="Contacts"
            restorable="true">
      </view>
   </extension>

</plugin>
